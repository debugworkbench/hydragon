{
  "name": "hydragon-build",
  "version": "1.0.0",
  "description": "Hydragon Build System",
  "repository": {
    "type": "git",
    "url": "https://github.com/debugworkbench/hydragon.git"
  },
  "author": "Vadim Macagon <vadim.macagon@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "./node_modules/.bin/ts-node npm-post-install.ts",
    "start": "npm run electron",

    "build:native-modules": "./node_modules/.bin/ts-node ./tasks/rebuild-native-modules.ts ./app/node_modules",
    "build:tasks": "./node_modules/.bin/tsc",
    "electron": "./node_modules/.bin/ts-node ./tasks/run-electron.ts ./app/lib/main/main.js",
    "electron:debug": "./node_modules/.bin/ts-node ./tasks/run-electron.ts ./app/lib/main/main.js --debug --stop-at-entry",
    "node-inspector": "./node_modules/.bin/ts-node ./tasks/run-node-inspector.ts ./app/node_modules/node-inspector/bin/inspector.js"
  },
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-plugin-transform-es2015-destructuring": "^6.5.0",
    "babel-plugin-transform-es2015-parameters": "^6.5.0",
    "babel-plugin-transform-polymer-base": "github:enlight/babel-plugin-transform-polymer-base",
    "electron-prebuilt": "^0.37.8",
    "electron-rebuild": "^1.1.3",
    "grunt": "^0.4.5",
    "grunt-concurrent": "^2.1.0",
    "grunt-contrib-jshint": "^0.11.3",
    "grunt-ibsforts": "github:enlight/grunt-ibsforts",
    "grunt-preprocess": "^5.0.1",
    "grunt-sync": "^0.4.1",
    "grunt-tslint": "^2.5.0",
    "grunt-vulcanize": "^1.0.0",
    "load-grunt-tasks": "^3.3.0",
    "shelljs": "^0.6.0",
    "ts-node": "^0.7.3",
    "tsd": "^0.6.0-beta.5",
    "tslint": "^2.5.1",
    "typescript": "^1.9.0-dev.20160513",
    "yargs": "^4.7.0"
  }
}
